@{
    if (ViewBag.ToastMessage is null)
    {
        ViewBag.ToastMessage = "У вас новое уведомление";
    }
    if (ViewBag.ButtonTitle is null)
    {
        ViewBag.ButtonTitle = "Действие";
    }
    if (ViewBag.AspRoute is null)
    {
        ViewBag.AspRoute = "/Home";
    }
}
<style>
    .toast-center{
        position: fixed;
        top: 120px;
        left: 50%;
        transform: translate(-50%, -50%);
    }
</style>
    <div class="z-3 toast toast-center" role="alert" id="liveToast" aria-live="assertive" aria-atomic="true">
        <div class="toast-body">
            Hello, world! This is a toast message.
            <div class="mt-2 pt-2 border-top">
                <a asp-route="" type="button" class="btn btn-primary btn-sm">Take action</a>
                <button type="button" class="btn btn-secondary btn-sm" data-bs-dismiss="toast">Закрыть</button>
            </div>
        </div>
    </div>
