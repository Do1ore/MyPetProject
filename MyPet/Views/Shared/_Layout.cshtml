<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - MyPet</title>
    <link rel="stylesheet" href="~/lib/bootstrap/mydist/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/MyPet.styles.css" asp-append-version="true" />
</head>
<body>
    <header style="margin-block-end: 40px">

        <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
  <div class="container-fluid" bis_skin_checked="1">
    <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">MyPet</a>

    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarColor01" aria-controls="navbarColor01" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarColor01" bis_skin_checked="1">
      <ul class="navbar-nav me-auto">
        <li class="nav-item">
          <a class="nav-link" href="#">Home
            <span class="visually-hidden">(current)</span>
          </a>
        </li>
        <li class="nav-item">
          <a class="nav-link" asp-controller="Product" asp-action="Index">Product list</a>
        </li>
        <li class="nav-item">
            <a class="nav-link" asp-controller="Product" asp-action="Create">Create</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="#">About</a>
        </li>
        <li class="nav-item dropdown">
          <a class="nav-link dropdown-toggle" data-bs-toggle="dropdown" href="#" role="button" aria-haspopup="true" aria-expanded="false">User managment</a>
          
          <div class="dropdown-menu" bis_skin_checked="1">
                <a class="text-dark dropdown-item" asp-area="" asp-controller="Role" asp-action="Index">Roles</a>
                <a class="text-dark dropdown-item" asp-area="" asp-controller="Role" asp-action="Create">Create role</a>
                <div class="dropdown-divider" bis_skin_checked="1"></div>
                <a class="text-dark dropdown-item" asp-area="" asp-controller="Role" asp-action="UserList">User list</a>
          </div>
        </li>
      </ul>
      <form class="d-flex">
        <input class="form-control me-sm-2" type="search" placeholder="Search">
        <button class="btn btn-secondary my-2 my-sm-0" type="submit">Search</button>
      </form>
    </div>
  </div>
    <partial name="_LoginPartial" />
</nav>

    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container text-center">
            &copy; 2023 - MyPet - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a> - All rights reserved
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
