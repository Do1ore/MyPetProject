@model MyPet.Models.ProductModel

<h2>Edit Product</h2>

<form asp-action="EditProduct" enctype="multipart/form-data" method="post">
    <input type="hidden" asp-for="Id" />
    <input type="hidden" name="FilePath" asp-for="FilePath" />
    <input type="hidden" name="FileName" asp-for="FileName" />
    <div class="form-group">
       

    </div>
    <div class="form-group">
        <label asp-for="ProductName">Product Name:</label>
        <input asp-for="ProductName" class="form-control" />
        <span asp-validation-for="ProductName"></span>
    </div>
    
    <div class="form-group">
        <label asp-for="Category">Category:</label>
        <input asp-for="Category" class="form-control" />
    </div>
    
    <div class="form-group">
        <label asp-for="Brand">Brand:</label>
        <input asp-for="Brand" class="form-control" />
    </div>
    
    <div class="form-group">
        <label asp-for="Description">Description:</label>
        <textarea asp-for="Description" class="form-control"></textarea>
    </div>
    
    <div class="form-group">
        <label asp-for="ShortDescription">Short Description:</label>
        <textarea asp-for="ShortDescription" class="form-control"></textarea>
    </div>
    
    <div class="form-group">
        <label asp-for="Price">Price:</label>
        <input asp-for="Price" class="form-control" />
    </div>
    
    <div class="form-group">
        <label asp-for="Info">Additional Info:</label>
        <textarea asp-for="Info" class="form-control"></textarea>
    </div>
    
    <div class="form-group">
        <label asp-for="Image">Image:</label>
        <input type="file" asp-for="Image" class="form-control-file" />
        <span asp-validation-for="Image"></span>
    </div>
   
    <button type="submit" class="btn btn-primary">Save Changes</button>
</form>