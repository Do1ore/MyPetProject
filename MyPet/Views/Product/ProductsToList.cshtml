@using MyPet.Areas.SomeLogics;
@model IEnumerable<MyPet.Models.MainProductModel>

@{
    ViewBag.Title = "Product List";
}

<head>

</head>
<p>
    <a asp-action="Create">Create New</a>
</p>
@foreach (var item in Model)
{
    #region Time
    string? value = TimeDifference.GetDifference(item.LastTimeEdited);
    #endregion
        <div class="card mb-lg-3" href="" style="max-width: 100%;">
            <div class="row">
            <div class="col-md-4 mycenter">
                        <img src="@item.MainFilePath" heigth="200px" class="img-fluid rounded-start" value="@item.SummaryStroke" asp-append-version="true">
            </div>
            <div class="col-md-8">
                <div class="card-body">
                       <h5 class="card-title">@item.SummaryStroke</h5>
                    <p class="card-text">@item.ShortDescription</p>
                    <p><small class="text-muted">@item.ProductType</small> </p>
                    <p><small class="text-muted">Bluetooth @item.BluetoothVersion</small></p>
                   

                    <p class="card-text">$@item.Price</p>
                    <p class="card-text"><small class="text-muted">Edited @value</small></p>




                    <button class="btn btn-danger" asp-controller="Product" asp-action="EditProduct" asp-route-id="@item.Id">Edit</button>

                    <button class="btn btn-info" asp-controller="Product" asp-action="ViewDetails" asp-route-Id="@item.Id">View details</button>

                    <a class="btn btn-primary" asp-controller="Product" asp-action="ViewDetails" asp-route-id="@item.Id">View details</a>
                </div>


                </div>
            </div>
        </div>
        
}
